@model PagedList.IPagedList<WebsiteRapChieuPhim.Models.TourNuocNgoai>
@using PagedList.Mvc;
@{
    ViewBag.Title = "dstourtnuoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdm.cshtml";
}

<style>
    #father {
        width: 200px;
        height: 200px;
        overflow: auto;
    }
</style>
<h2 align="center" style="width:100%">Danh sách Tour Nước Ngoài</h2>

<p>
    @Html.ActionLink("Create New", "CreateTourTNN","tournn")
</p>
<table class="table">
    <tr>
        <th>
            Khởi hành từ
        </th>
        <th>
            Thời gian
        </th>
        <th>
            Khời hành ngày
        </th>
        <th>
            Giới thiệu Tour
        </th>
        <th>
            Thumbnail
        </th>
        <th>
            Chương trình Tour
        </th>
        <th>
            Khuyến Mãi
        </th>
        <th>
            Điểm đến id
        </th>
        <th>
            Giá
        </th>
        <th>
            Tên Tour
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.khoihanhtu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thoigian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khoihanhngay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gioithieutour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thumnail)
            </td>
            <td>
                <div id="father">@Html.DisplayFor(modelItem => item.chuongtrinhtour)</div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khuyenmai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diemdenid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tentour)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTourTNN", new { id = item.id }) 
                @Html.ActionLink("Details", "DetailsTourTNN", new { id = item.id }) 
                @Html.ActionLink("Delete", "DeleteTourTNN", new { id = item.id })
            </td>
        </tr>
    }

</table>
<div>@Html.PagedListPager(Model, page => Url.Action("dstourtnuocs", new { page }))</div>
