<style>
    .alt {
        display: table-row;
        vertical-align: inherit;
        border-color: inherit;
    }

    th {
        text-align: center;
    }

    td {
        text-align: center;
    }

    tr {
        padding: 10px;
        padding-bottom: 15px;
    }
</style>
<div class="list_tour_cate boxtour ">
    <table width="100%">
        <tbody>

            <tr class="alt" style="text-align:center;background: #E8E8FF;">
                <th>STT</th>
                <th>Tên tour</th>
                <th width="11%">Thời gian</th>
                <th width="10%">Giá tour <span style="font-size:11px;">(VNĐ/Khách)</span></th>
                <th width="10%">Giá khuyến mãi <span style="font-size:11px;">(VNĐ/Khách)</span></th>
                <th width="10%">Khởi hành</th>
                <th width="10%">Khởi hành từ</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {


                if (item.id % 2 == 0)
                {


                    <tr style="background: #E8E8FF;">
                        <td align="center">@item.id</td>
                        <td>
                            <a href="@Url.Action("chitietTour", "Home", new { id = @item.id })" title="@Html.DisplayFor(modelItem => item.tentour)">@Html.DisplayFor(modelItem => item.tentour)</a>

                        </td>
                        <td align="center">@Html.DisplayFor(modelItem => item.thoigian)</td>
                        <td align="center">
                            @String.Format("{0:#,##0.##}", Convert.ToDouble(item.gia.ToString())) VNĐ
                        </td>
                        @{


                            string str1 = item.gia;


                            double x = Convert.ToDouble(str1);
                            double y = Convert.ToDouble(item.khuyenmai);
                            double strs = x * (100 - y) / 100;

                        }
                        <td align="center" style="margin-bottom:3px" class="gia">@String.Format("{0:#,##0.##}", strs) VNĐ</td>
                        <td align="center"> @Html.DisplayFor(modelItem => item.khoihanhngay)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.khoihanhtu)</td>
                        <td align="center">
                            <form action="#" method="POST">


                                <button class="oder_tour_cate" type="submit"><a href="/home/dattours?name=@item.tentour&hh=@item.id" class="menu-link ">Đặt Tour</a></button>
                            </form>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td align="center">@item.id</td>
                        <td>
                            <a href="@Url.Action("chitietTour", "Home", new { id = @item.id })" title="@Html.DisplayFor(modelItem => item.tentour)">@Html.DisplayFor(modelItem => item.tentour)</a>

                        </td>
                        <td align="center">@Html.DisplayFor(modelItem => item.thoigian)</td>
                        <td align="center">
                            @String.Format("{0:#,##0.##}", Convert.ToDouble(item.gia.ToString())) VNĐ
                        </td>
                        @{


                            string str1 = item.gia;


                            double x = Convert.ToDouble(str1);
                            double y = Convert.ToDouble(item.khuyenmai);
                            double strs = x * (100 - y) / 100;

                        }
                        <td align="center" class="gia">@String.Format("{0:#,##0.##}", strs) VNĐ</td>
                        <td align="center"> @Html.DisplayFor(modelItem => item.khoihanhngay)</td>
                        <td align="center">@Html.DisplayFor(modelItem => item.khoihanhtu)</td>
                        <td align="center">
                            <form action="#" method="POST">


                                <button class="oder_tour_cate" type="submit"><a href="/home/dattours?name=@item.tentour&hh=@item.id" class="menu-link ">Đặt Tour</a></button>
                            </form>
                        </td>
                    </tr>
                }


            }


        </tbody>
    </table>
</div>


